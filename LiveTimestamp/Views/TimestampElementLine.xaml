<UserControl x:Class="LiveTimestamp.Views.TimestampElementLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiveTimestamp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./StyleResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource BackgroundElement}" BorderBrush="CornflowerBlue" x:Name="border" Width="200">
            <TextBlock x:Name="text" Text="yyyy-MM-dd-HH-mm-ss" Style="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
